{
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": "./deploy",
        "module": "esnext",
        "target": "es5",
        "lib": ["dom", "ES2015", "ES2016", "ES2017", "es2018"],
        "strict": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "stripInternal": true,
        "outDir": "./deploy/",
        "resolveJsonModule": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src"],
    "compileOnSave": false
}
